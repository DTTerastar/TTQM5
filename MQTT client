            state.dispatch = now()
            return evt60
		}
         else if (topic[1]=='cover') {
            state.seq2++
            sequence=state.seq2.toString()
			if (topic[3]=='friendly_name') {
				log ("Device ${topic[2]} is a HA cover and is called " +payload[0], "TRACE")
